@model Team3_FinalProject.Models.Transaction

@{
    ViewData["Title"] = "Transact";
}

<h1>@ViewBag.TransactTitle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Transact">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.TransactTitle == "Initial Deposit")
            {
                <div class="form-group">
                    <label asp-for="TransactionType" class="control-label"></label>
                    <input type="radio" class="radio" asp-for="TransactionType" value="@TransactionType.Deposit" checked="checked" />Deposit
                    <span asp-validation-for="TransactionType" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="TransactionType" class="control-label"></label>
                    <input type="radio" class="radio" asp-for="TransactionType" value="@TransactionType.Deposit" checked="checked" />Deposit
                    <input type="radio" class="radio" asp-for="TransactionType" value="@TransactionType.Withdrawal" />Withdrawal<br />
                    <span asp-validation-for="TransactionType" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Account" class="control-label"></label>
                @Html.DropDownList("SelectedAccount", (SelectList)ViewBag.AllAccounts, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="TransactionAmount" class="control-label"></label>
                <input asp-for="TransactionAmount" type="number" class="form-control" />
                <span asp-validation-for="TransactionAmount" class="text-danger"></span>
            </div>
            <p>@ViewBag.AmountNotification</p>
            <div class="form-group">
                <input type="submit" value="Transact" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Accounts">Back to All Accounts</a>
</div>

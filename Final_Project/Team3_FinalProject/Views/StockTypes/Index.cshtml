@model IEnumerable<Team3_FinalProject.Models.StockType>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.IsInRole("Admin"))
    {
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    }


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StockTypeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StockTypeName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StockTypeID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.StockTypeID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.StockTypeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

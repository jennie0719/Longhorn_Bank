@model IEnumerable<Team3_FinalProject.Models.Dispute>

@{
    ViewData["Title"] = "Index";
}

<h1>Disputes</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Customer Number
            </th>
            <th>
                Transaction Description
            </th>
            <th>
                Transaction Amount
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorrectAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeleteTransaction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisputeStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Transaction.Account.AppUser.FirstName) @Html.DisplayFor(modelItem => item.Transaction.Account.AppUser.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transaction.Account.AppUser.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transaction.TransactionDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transaction.TransactionAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorrectAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeleteTransaction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisputeStatus)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.DisputeID">Details</a> |
                <a asp-action="Resolve" asp-route-id="@item.DisputeID">Resolve</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Index" asp-route-SearchStatus="@Status.Submitted">View Pending</a> |
    <a asp-action="Index">View All</a> |
    <a asp-action="StaffHome" asp-controller="Home">Back to Home</a>
</div>
